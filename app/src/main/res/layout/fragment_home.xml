<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.home.HomeFragment" >

    <TextView
        android:id="@+id/HomeDisc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingLeft="14dp"
        android:text="Welcome to House Rental Application\n This Application was made to make it easy for people to rent houses and an easy search in different regions and countries around the world"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textStyle="bold" />


    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/house_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical" >

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>